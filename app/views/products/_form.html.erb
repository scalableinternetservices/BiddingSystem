<div class="col-md-5">
    <div class="panel panel-primary">
        <div class="panel-heading"><%= action %></div>
        <div class="panel-body">

            <%= form_for(product) do |f| %>
                <% if product.errors.any? %>
                    <div id="error_explanation">
                        <h2>
                            <%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
                        <ul>
                            <% product.errors.full_messages.each do |message| %>
                                <li>
                                    <%= message %>
                                </li>
                                <% end %>
                        </ul>
                    </div>
                <% end %>

                <div class="field">
                    <%= f.label :name %>
                        <%= f.text_field :name %>
                </div>
                
                <div class="field">
                    <%= f.label :category_id %>
                        <%= f.select :category_id, categories.map { |c| [c.name, c.category_id] } %>
                </div>

                <div class="field">
                    <%= f.label :location_id %>
                    <%= f.select :location_id, @locations.each_with_index.map { |l, l_id| [l, l_id] } %>
                </div>

                <div class="actions">
                    <%= f.submit action, class: "btn btn-success" %>
                </div>
            <% end %>
        </div>
    </div>
</div>