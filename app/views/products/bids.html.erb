<div class="col-md-9">
  <div class="panel panel-primary">
    <div class="panel-heading">Bids</div>
    <div class="panel-body">
      <table class="table">
        <thead>
          <tr>
            <th>User</th>
            <th>Bid Amount</th>
          </tr>
        </thead>

        <% @bids=Bid.get_all_the_bids(params[:product_id]) %>
        <% if @bids != 0 %>
        <tbody>
          <% @bids.each do |bid| %>
            <tr>
              <td>
                <%= User.find(bid.user_id).email %>
              </td>
              <td>
                <%= bid.bid_amount %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <% else %>
        <tr>
          <td>No bids yet</td>
        </tr>
        <%end%>
      </table>

    </div>
  </div>
</div>