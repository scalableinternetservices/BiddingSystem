<div class="col-md-9">
  <div class="panel panel-primary">
    <div class="panel-heading">Products</div>
    <div class="panel-body">
      <table class="table">
        <thead>
          <tr>
            <th>User</th>
            <th>Category</th>
            <th>Name</th>
            <th>Date added</th>
            <th>Location</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td>
                <%= product.user_id %>
              </td>
              <td>
                <%= Category.find(product.category_id).name %>
              </td>
              <td>
                <%= product.name %>
              </td>
              <td>
                <%= product.date_added %>
              </td>
              <td>
                <%= @locations[product.location_id] %>
              </td>
              <td>
                <%= link_to 'Show', product %>
              </td>
              <td>
                <%= link_to 'Edit', edit_product_path(product) %>
              </td>
              <td>
                <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
              <td>
                <% if @product_bid_item = @products_under_bid.find_by_product_id_and_bid_status(product.product_id, true) %>
                <%= link_to 'Stop Bid', end_bid_sellers_path(:product_bid_id => @product_bid_item.product_bid_id) %>
                <% else %>
                <%= link_to 'Start Bid', bid_sellers_path(:product_id => product.product_id) %>
                <% end %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
      <div id="paginate">
           <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
</div>