<div class="col-md-5">
    <div class="panel panel-primary">
        <div class="panel-heading"><%= action %></div>
        <div class="panel-body">
 
            <%= form_for :products_under_bid, url: { action: "start_bid" } do |f| %>
            
                <div class="field">
                    <%= f.label :product_id %>
                        <%= f.text_field :product_id, :value => product_id, :readonly => true %>
                </div>
                
                <div class="field">
                    <%= f.label :minimum_bidding_price %>
                        <%= f.text_field :minimum_bidding_price, :value => 0 %>
                </div>
                <div class="pull-right">
                     <%= f.label :bid_start_time %>
                        <%= f.time_select(:bid_start_time) %>
                </div>
                <div class="field">
                     <%= f.label :bid_start_date %>
                        <%= f.date_select(:bid_start_date) %>
                </div>
                <div class="pull-right">
                     <%= f.label :bid_end_time %>
                        <%= f.time_select(:bid_end_time) %>
                </div>
                <div class="field">
                     <%= f.label :bid_end_date %>
                        <%= f.date_select(:bid_end_date) %>
                </div>

                <div class="actions">
                    <%= f.submit action, class: "btn btn-success" %>
                </div>
            <% end %>
        </div>    
    </div>
</div>